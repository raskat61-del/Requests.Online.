# Основные настройки приложения
APP_NAME=Analytics Bot API
APP_VERSION=1.0.0
DEBUG=True
API_V1_STR=/api/v1

# Безопасность
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# База данных
DATABASE_URL=postgresql://analytics_user:analytics_password@localhost:5432/analytics_db
ASYNC_DATABASE_URL=postgresql+asyncpg://analytics_user:analytics_password@localhost:5432/analytics_db

# Redis
REDIS_URL=redis://localhost:6379

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API ключи для поисковых систем
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_ID=your-google-cse-id
YANDEX_API_KEY=your-yandex-api-key

# API ключи для социальных сетей
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash
VK_API_TOKEN=your-vk-api-token
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=AnalyticsBot:v1.0.0 (by /u/yourusername)

# Настройки файлов
UPLOAD_DIR=uploads
REPORTS_DIR=reports
MAX_FILE_SIZE=10485760

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8080"]

# Настройки парсинга
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
REQUEST_DELAY=1.0
MAX_RETRIES=3
TIMEOUT=30

# Email настройки (опционально)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Analytics Bot

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Мониторинг
ENABLE_METRICS=True
METRICS_PORT=8001